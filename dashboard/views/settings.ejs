<%- include("includes/header", { bot, user, path, title: "Dashboard" }) %>


<% if (alert) { %>
<br><div class="alert alert-success">
  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  <strong>Success! </strong> <%= alert %>
</div>
<% } %>


<script>
window.setTimeout(function() {
    $(".alert").fadeTo(500, 0).slideUp(500, function(){
        $(this).remove(); 
    });
}, 2000);
</script>

<div class="container jumbotron text-center bg-transparent">
  <% if(guild.icon) { %>
  <img src="<%= `https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.png?size=128` %>"
    style="border-radius: 50%;">
  <% } %>
  <h1 class="display-4"><span><%= guild.name %></span></h1>
</div>
<hr style="position: relative; top: -40px;">
<div id="settings" style="margin: -30px 0 0 0;">
  <form method="POST">
    <div class="form-group mt-5">
      <div class="col-4 mx-auto"><label>Prefix</label><input class="form-control" type="text" name="prefix"
          value="<%= prefix %>" placeholder="Your prefix.">
      </div>
      <div class=" col-4 mx-auto" style="margin: 20px 0 0 0;"><label>Commands</label>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><%= prefix %></span>
          </div>
          <input class="form-control" type="text" name="cmdname" placeholder="Commands name">
        </div>
        <input class="form-control" type="text" name="cmdresponce" placeholder="Commands responce">
      </div>
      <!-- <input class="form-control" type="text" name="cmdlist" placeholder="<%= cmdlistcmd %>" readonly> -->
    </div>
    <div class="d-flex justify-content-center">
      <button class="btn btn-primary" id="Submit" style="margin: 20px 0 0 0;"><i class="fas fa-rocket"></i>
        <span type="submit" class="ml-1">Submit</span></button>
    </div>
  </form>
</div>
</body>
</html>